  "scripts": {
    "test": "react-scripts test",
    "start": "node server.js",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "coverage": "react-scripts test -u --env=jsdom --coverage --forceExit --coveragePathIgnorePatterns=src/index.js --coveragePathIgnorePatterns=src/store/index.js --coveragePathIgnorePatterns=src/serviceWorker.js",
